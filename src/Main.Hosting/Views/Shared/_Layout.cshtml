<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="Content-Language" content="en" />
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <title>Hisar Tabler Hosting - @ViewData["Title"]</title>
    <link href="http://cdn.netcorestack.com/css/efe-tabler-all-2.1.5.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://cdn.netcorestack.com/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300i,400,400i,500,500i,600,600i,700,700i&amp;subset=latin-ext">
    <link rel="icon" href="~/favicon.ico" />
    @RenderSection("Styles", required: false)
    <script src="//cdn.netcorestack.com/js/bundle-tabler.min.js"></script>
    <script src="//cdn.netcorestack.com/js/efe-tabler-all-2.1.5.js"></script>
    @Html.CreateEfeContext()
</head>
<body>

    <div class="page">
        <div class="page-main">

            <div class="header py-2">
                <div class="container">
                    <div class="d-flex pl-3 pr-3">
                        <a class="header-brand" href="/">
                            <img src="~/images/logo.png" class="header-brand-img">
                            Hisar
                        </a>
                        <div class="d-flex order-lg-2 ml-auto">
                            <div class="nav-item d-none d-md-flex">
                                <a href="https://github.com/netcorestack/hisar" class="btn btn-sm btn-outline-primary" target="_blank">Source code</a>
                            </div>

                            <div class="dropdown d-none d-md-flex">
                                <a class="nav-link icon" data-toggle="dropdown">
                                    <i class="fa fa-bell"></i>
                                    <span class="nav-unread"></span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                    <a href="#" class="dropdown-item d-flex">
                                        <span class="avatar mr-3 align-self-center" style="background-image: url(demo/faces/01.png)"></span>
                                        <div>
                                            <strong>Nathan</strong> pushed new commit: Fix page load performance issue.
                                            <div class="small text-muted">10 minutes ago</div>
                                        </div>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item text-center text-muted-dark">Mark all as read</a>
                                </div>
                            </div>

                            <div class="dropdown">
                                <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
                                    <span class="avatar" style="background-image: url(/images/blank-avatar.png)"></span>
                                    <span class="ml-2 d-none d-lg-block">
                                        <span class="text-default">John Doe</span>
                                        <small class="text-muted d-block mt-1">john.doe@contoso.com</small>
                                    </span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                    <a class="dropdown-item" href="#">
                                        <i class="dropdown-icon fe fe-settings"></i> My Settings <small>(Demo)</small>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">
                                        <i class="dropdown-icon fe fe-help-circle"></i> Help</small>
                                    </a>
                                    <a class="dropdown-item" asp-controller="Authorization" asp-action="Logout">
                                        <i class="dropdown-icon fe fe-log-out"></i> Logout
                                    </a>
                                </div>
                            </div>

                        </div>
                        <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
                            <span class="header-toggler-icon"></span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
                <div class="container">
                    <div class="row align-items-center">
                        @*<div class="col-lg-3 ml-auto"></div>*@
                        <div class="col-lg order-lg-first">

                            <ul class="nav nav-tabs border-0 flex-column flex-lg-row ml-1">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link"><i class="fa fa-home"></i> Home</a>
                                </li>

                                @(Html.RenderMenu())

                            </ul>

                        </div>
                    </div>
                </div>
            </div>
            <div class="my-3 my-md-5">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-auto ml-lg-auto">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <ul class="list-inline list-inline-dots mb-0">
                                    <li class="list-inline-item"><span class="icon mr-1"><i class="fe fe-book"></i></span> <a href="https://github.com/NetCoreStack/Hisar">Hisar</a></li>
                                    <li class="list-inline-item"><span class="icon mr-1"><i class="fe fe-book"></i></span> <a href="https://github.com/NetCoreStack/Tools">Hisar Tool</a></li>
                                    <li class="list-inline-item"><span class="icon mr-1"><i class="fe fe-book"></i></span> <a href="https://github.com/NetCoreStack/Localization">Localization</a></li>
                                    <li class="list-inline-item"><span class="icon mr-1"><i class="fe fe-book"></i></span> <a href="https://github.com/NetCoreStack/Proxy">Proxy</a></li>
                                </ul>
                            </div>
                            <div class="col-auto">
                                <a href="https://github.com/netcorestack/Hisar" class="btn btn-outline-primary btn-sm">Source code</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
                        © 2018 <a href=".">NetCoreStack</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
    @Html.UseNotification()
    @{ await NetCoreStack.Hisar.HtmlHelperExtensions.RenderComponentsScriptsAsync(Html); }
</body>
</html>
